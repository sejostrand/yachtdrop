{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Products",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "product_name": {
      "type": "string",
      "required": true
    },
    "product_description": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "decimal",
      "min": 0
    },
    "product_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "featured": {
      "type": "boolean",
      "default": true
    },
    "location": {
      "type": "string"
    },
    "category_tags": {
      "type": "richtext"
    },
    "pack_size": {
      "type": "integer",
      "default": 1,
      "min": 1
    }
  }
}
