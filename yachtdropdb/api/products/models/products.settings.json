{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Products",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "product_name": {
      "type": "string",
      "required": true
    },
    "product_description": {
      "type": "string"
    },
    "featured": {
      "type": "boolean",
      "default": true
    },
    "product_img": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "product_price": {
      "type": "decimal",
      "default": 1,
      "min": 0
    },
    "categories": {
      "type": "json"
    },
    "pack_size": {
      "type": "integer",
      "default": 1,
      "required": true
    },
    "unit_size": {
      "type": "string"
    },
    "vintage": {
      "type": "biginteger"
    },
    "product_format": {
      "type": "string"
    }
  }
}
