{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Products",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "display": {
      "type": "string",
      "required": true
    },
    "subDisplay": {
      "type": "string"
    },
    "featured": {
      "type": "boolean",
      "default": true
    },
    "productImg": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "price": {
      "type": "decimal",
      "default": 1,
      "min": 0
    },
    "packSize": {
      "type": "integer",
      "default": 1,
      "required": true
    },
    "unitVolume": {
      "type": "string"
    },
    "vintage": {
      "type": "biginteger"
    },
    "packageType": {
      "type": "string"
    },
    "favourites": {
      "collection": "favourites",
      "via": "products"
    },
    "supplier": {
      "via": "products",
      "model": "suppliers"
    },
    "category": {
      "model": "categories",
      "via": "products"
    },
    "subCategory": {
      "via": "products",
      "model": "sub-categories"
    },
    "fullDescription": {
      "type": "text"
    },
    "categoryTags": {
      "collection": "category-tags",
      "via": "products"
    },
    "port": {
      "model": "ports"
    }
  }
}
