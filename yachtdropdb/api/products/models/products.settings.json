{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Products",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "display": {
      "type": "string",
      "required": true
    },
    "subDisplay": {
      "type": "string"
    },
    "featured": {
      "type": "boolean",
      "default": true
    },
    "product_img": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "price": {
      "type": "decimal",
      "default": 1,
      "min": 0
    },
    "pack_size": {
      "type": "integer",
      "default": 1,
      "required": true
    },
    "unit_size": {
      "type": "string"
    },
    "vintage": {
      "type": "biginteger"
    },
    "product_format": {
      "type": "string"
    },
    "favourites": {
      "collection": "favourites",
      "via": "products"
    },
    "supplier": {
      "model": "suppliers",
      "via": "products"
    },
    "category": {
      "model": "categories",
      "via": "products"
    },
    "sub_category": {
      "via": "products",
      "model": "sub-categories"
    },
    "fullDescription": {
      "type": "text"
    },
    "category_tags": {
      "via": "products",
      "collection": "category-tags"
    }
  }
}
